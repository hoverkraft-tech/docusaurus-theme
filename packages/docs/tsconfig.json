{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/**/*.test.ts", "src/**/*.spec.ts", "src/**/__tests__"]
}
