{
  "name": "@hoverkraft/hoverkraft-theme-docs",
  "version": "0.0.0",
  "private": true,
  "description": "Documentation for the Hoverkraft Docusaurus theme",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start --host 0.0.0.0",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "format": "prettier --cache --write '**/*.ts'",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint -- --output-file eslint-report.json --format json",
    "jest": "jest --detectOpenHandles --forceExit",
    "test:watch": "npm run jest -- --watch --maxWorkers=25%",
    "test:cov": "npm run test -- --coverage",
    "test": "npm run jest -- --maxWorkers=50%",
    "test:ci": "npm run jest -- --coverage --runInBand"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@docusaurus/theme-live-codeblock": "^3.9.2",
    "@hoverkraft/docusaurus-theme": "*",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "engines": {
    "node": ">=18.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "<rootDir>/tsconfig.jest.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(prism-react-renderer)/)"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test)?(.*).+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.[jt]s?(x)"
    ]
  }
}
