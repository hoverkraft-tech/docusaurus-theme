{
  "name": "@hoverkraft/docusaurus-theme",
  "version": "1.0.0",
  "description": "Hoverkraft theme for Docusaurus",
  "main": "lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./components": {
      "types": "./lib/components.d.ts",
      "import": "./lib/components.js",
      "require": "./lib/components.js",
      "default": "./lib/components.js"
    }
  },
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc && node scripts/copy-static-assets.js",
    "start": "tsc --watch",
    "format": "prettier --cache --write '**/*.ts'",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint -- --output-file eslint-report.json --format json",
    "jest": "jest --detectOpenHandles --forceExit",
    "test:watch": "npm run jest -- --watch --maxWorkers=25%",
    "test:cov": "npm run test -- --coverage",
    "test": "npm run jest -- --maxWorkers=50%",
    "test:ci": "npm run jest -- --coverage --runInBand"
  },
  "keywords": [
    "docusaurus",
    "theme",
    "hoverkraft",
    "documentation"
  ],
  "author": "Hoverkraft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoverkraft-tech/docusaurus-theme.git"
  },
  "peerDependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/theme-common": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "@docusaurus/utils": "^3.0.0",
    "@docusaurus/utils-validation": "^3.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/theme-common": "^3.9.2",
    "@docusaurus/types": "^3.9.2",
    "@docusaurus/utils": "^3.9.2",
    "@docusaurus/utils-validation": "^3.9.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "identity-obj-proxy": "^3.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^@docusaurus/Link$": "<rootDir>/src/test-utils/docusaurusLinkMock.tsx",
      "^@docusaurus/useBaseUrl$": "<rootDir>/src/test-utils/docusaurusUseBaseUrlMock.ts"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test)?(.*).+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.[jt]s?(x)"
    ]
  }
}
